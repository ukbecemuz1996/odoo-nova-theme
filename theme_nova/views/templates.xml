<odoo>
    <template id="portfolios">
        <t t-call="website.layout">
            <div id="wrap">
                <!-- ======= Breadcrumbs ======= -->
                <div class="breadcrumbs d-flex align-items-center" style="background-image: url('theme_nova/static/img/portfolio-header.jpg');">
                    <div class="container position-relative d-flex flex-column align-items-center">
                        <h2>Portfolio</h2>
                        <ol>
                            <li>
                                <a href="/">Home</a>
                            </li>
                            <li>Portfolio</li>
                        </ol>
                    </div>
                </div>
                <!-- End Breadcrumbs -->
                <!-- ======= Portfolio Section ======= -->
                <section id="portfolio" class="portfolio">
                    <div class="container" data-aos="fade-up">
                        <div class="portfolio-isotope" data-portfolio-filter="*" data-portfolio-layout="masonry" data-portfolio-sort="original-order">
                            <ul class="portfolio-flters" data-aos="fade-up" data-aos-delay="100">
                                <li data-filter="*" class="filter-active">All</li>
                                <t t-foreach="tags" t-as="tag">
                                    <li t-attf-data-filter=".filter-{{tag.name}}">
                                        <t t-esc="tag.name" />
                                    </li>
                                </t>
                            </ul>
                            <!-- End Portfolio Filters -->
                            <div class="row gy-4 portfolio-container" data-aos="fade-up" data-aos-delay="300">
                                <t t-foreach="projects" t-as="project">
                                    <t t-log="project"/>
                                    <div t-attf-class="col-lg-4 mb-4 col-md-6 portfolio-item {{project.tag_ids_class}}">
                                        <t t-set="image_url" t-valuef="/web/image?model=nova.project&amp;id={{project.id}}&amp;field=cover_image" />
                                        <img t-attf-src="{{image_url}}" class="img-fluid" alt="" />
                                        <div class="portfolio-info">
                                            <h4>
                                                <t t-esc="project.title" />
                                            </h4>
                                            <!-- <p>Lorem ipsum, dolor sit amet consectetur</p> -->
                                            <a t-attf-href="{{image_url}}" t-attf-title="{{project.title}}" data-gallery="portfolio-gallery-app" class="glightbox preview-link">
                                                <i class="bi bi-zoom-in"></i>
                                            </a>
                                            <a t-attf-href="/portfolios/{{project.website_url}}" title="More Details" class="details-link">
                                                <i class="bi bi-link-45deg"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <!-- End Portfolio Item -->
                                </t>
                            </div>
                        </div>
                    </div>
                </section>
                <div class="oe_structure"></div>
            </div>
        </t>
    </template>
    <template id="portfolio">
