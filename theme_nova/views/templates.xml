                        <i class="bi bi-star"></i>
                        <i class="bi bi-star"></i>
                    </t>
                    <t t-elif="testimonial.rate == '4'">
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star"></i>
                    </t>
                    <t t-elif="testimonial.rate == '5'">
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                    </t>
                    <t t-else="">
                        <i class="bi bi-star"></i>
                        <i class="bi bi-star"></i>
                        <i class="bi bi-star"></i>
                        <i class="bi bi-star"></i>
                        <i class="bi bi-star"></i>
                    </t>
                </div>
                <p>
                    <t t-raw="testimonial.comment" />
                </p>
                <div class="profile mt-auto">
                    <img t-attf-src="/web/image?model=nova.testimonial&amp;id={{testimonial.id}}&amp;field=image_1920" class="testimonial-img" alt=""/>
                    <t t-set="full_name" t-valuef="{{testimonial.first_name}} {{testimonial.last_name}}" />
                    <h3>
                        <t t-esc="full_name"/>
                    </h3>
                    <h4>
                        <t t-esc="testimonial.position"/>
                    </h4>
                </div>
            </div>
        </div>
    </template>
    <template id="blog">
        <t t-call="website.layout">
            <div id="wrap">
                <!-- ======= Breadcrumbs ======= -->
                <div class="breadcrumbs d-flex align-items-center" style="background-image: url('/theme_nova/static/img/blog-header.jpg');">
                    <div class="container position-relative d-flex flex-column align-items-center">
                        <h2>Blog</h2>
                        <ol>
                            <li>
                                <a href="/">Home</a>
                            </li>
                            <li>Blog</li>
                        </ol>
                        <t t-if="q">
                            <h6 style="color:#fff">Search :<t t-esc="q" /></h6>
                        </t>
                        <t t-if="category">
                            <h6 style="color:#fff">Category :<t t-esc="category.name" /></h6>
                        </t>
                        <t t-if="tag">
                            <h6 style="color:#fff">Tag :<t t-esc="tag.name" /></h6>
                        </t>
                        
                    </div>
                </div>
                <!-- End Breadcrumbs -->
                <section id="blog" class="blog">
                    <div class="container" data-aos="fade-up">
                        <div class="row g-5">
                            <t t-if="post">
                                <t t-call="theme_nova.post_details" />
                            </t>
                            <t t-else="">
                                <t t-call="theme_nova.blog_posts" />
                            </t>
                            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="400">
                                <div class="sidebar ps-lg-4">
                                    <div class="sidebar-item search-form">
                                        <h3 class="sidebar-title">Search</h3>
                                        <form id="search_form" method="post"  class="mt-3">
                                            <input type="text" name="q" t-att-value="q" />
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                            <button type="submit">
                                                <i class="bi bi-search"></i>
                                            </button>
                                        </form>
                                    </div>
                                    <!-- End sidebar search formn-->
                                    <div class="sidebar-item categories">
                                        <h3 class="sidebar-title">Categories</h3>
                                        <ul class="mt-3">
                                            <t t-foreach="categories" t-as="category">
                                                <li>
                                                    <a t-attf-href="/blog/category/{{category.id}}">
                                                        <t t-esc="category.name" />
                                                        <span>(<t t-esc="category.posts_count" />)</span>
                                                    </a>
                                                </li>
                                            </t>
                                        </ul>
                                    </div>
                                    <!-- End sidebar categories-->
                                    <div class="sidebar-item recent-posts">
                                        <h3 class="sidebar-title">Recent Posts</h3>
                                        <div class="mt-3">
                                            <t t-foreach="resent_posts" t-as="post">
                                                <div class="post-item mt-3">
                                                    <img t-attf-src="/web/image?model=nova.blog.post&amp;id={{post.id}}&amp;field=image_1920" alt="" class="flex-shrink-0"/>
                                                    <div>
                                                        <h4>
                                                            <a t-attf-href="/blog/post/{{post.id}}">
                                                                <t t-esc="post.title"/>
                                                            </a>
                                                        </h4>
                                                        <time>
                                                            <t t-esc="post.date"/>
                                                        </time>
                                                    </div>
                                                </div>
                                            </t>
                                        </div>
                                    </div>
                                    <!-- End sidebar recent posts-->
                                    <div class="sidebar-item tags">
                                        <h3 class="sidebar-title">Tags</h3>
                                        <ul class="mt-3">
                                            <t t-foreach="tags" t-as="tag" >
                                                <li>
                                                    <a t-attf-href="/blog/tag/{{tag.id}}">
                                                        <t t-esc="tag.name" />
                                                    </a>
                                                </li>
                                            </t>
                                        </ul>
                                    </div>
                                    <!-- End sidebar tags-->
                                </div>
                                <!-- End Blog Sidebar -->
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
    <template id="post_item">
        <div t-attf-class="{{column_classes}} mb-5" >
            <article class="d-flex flex-column">
                <div class="post-img">
                    <img t-attf-src="/web/image?model=nova.blog.post&amp;id={{post.id}}&amp;field=image_1920" alt="" class="img-fluid" />
                </div>
                <h2 class="title">
                    <a t-attf-href="/blog/post/{{post.id}}">
                        <t t-esc="post.title" />
                    </a>
                </h2>
                <div class="meta-top">
                    <ul>
                        <li class="d-flex align-items-center">
                            <i class="bi bi-person"></i>
                            <a t-attf-href="/blog/post/{{post.id}}">
                                <t t-esc="post.user_id.name" />
                            </a>
                        </li>
                        <li class="d-flex align-items-center">
                            <i class="bi bi-clock"></i>
                            <a t-attf-href="/blog/post/{{post.id}}">
                                <time datetime="2022-01-01">
                                    <t t-esc="post.date" />
                                </time>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="read-more mt-auto align-self-end">
                    <a t-attf-href="/blog/post/{{post.id}}">Read More
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </article>
        </div>
        <!-- End post list item -->
    </template>
    <template id="blog_posts">
        <div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
            <div class="row gy-5 posts-list">
                <t t-foreach="posts" t-as="post">
                    <t t-call="theme_nova.post_item">
                        <t t-set="column_classes">col-lg-6</t>
                    </t>
                </t>
                <t t-if="len(posts) == 0">
                    <h2>No Posts</h2>
                </t>
            </div>
            <div class="blog-pagination d-flex justify-content-center">
                <t t-call="website.pager" />
            </div>
            <!-- End blog pagination -->
        </div>
    </template>
    <template id="post_details">
        <div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
            <article class="blog-details">
                <div class="post-img">
                    <img t-attf-src="/web/image?model=nova.blog.post&amp;id={{post.id}}&amp;field=image_1920" alt="" class="img-fluid"/>
                </div>
                <h2 class="title">
                    <t t-esc="post.title" />
                </h2>
                <div class="meta-top">
                    <ul>
                        <li class="d-flex align-items-center">
                            <i class="bi bi-person">
                                <t t-esc="post.user_id.name" />
                            </i>
                            <a href="#"></a>
                        </li>
                        <li class="d-flex align-items-center">
                            <i class="bi bi-clock"></i>
                            <a href="#">
                                <time><t t-esc="post.date" /></time>
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- End meta top -->
                <div class="content">
                    <t t-raw="post.content" />
                </div>
                <div class="meta-bottom">
                    <i class="bi bi-folder"></i>
                    <ul class="cats">
                        <li>
                            <a t-attf-href="/blog/category/{{post.category_id.id}}">
                                <t t-esc="post.category_id.name" />
                            </a>
                        </li>
                    </ul>
                    <i class="bi bi-tags"></i>
                    <ul class="tags">
                        <t t-foreach="post.tag_ids" t-as="tag">
                            <li>
                                <a t-attf-href="/blog/tag/{{tag.id}}"><t t-esc="tag.name" /></a>
                            </li>
                        </t>
                    </ul>
                </div>
                <!-- End meta bottom -->
            </article>
            <!-- End blog post -->
        </div>
    </template>
</odoo>