                                            <img t-attf-src="/web/image?model=nova.project&amp;id={{project.id}}&amp;field=cover_image" alt=""/>
                                        </div>
                                        <t t-foreach="project.project_image_ids" t-as="one_image">
                                            <div class="swiper-slide">
                                                <img t-attf-src="/web/image?model=nova.project.image&amp;id={{one_image.id}}&amp;field=image_1920" alt=""/>
                                            </div>
                                        </t>
                                    </div>
                                    <div class="swiper-pagination"></div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="portfolio-info">
                                    <h3>Project information</h3>
                                    <ul>
                                        <li>
                                            <strong>Category</strong>:
                                            <t t-esc="project.category_id.name" />
                                        </li>
                                        <li>
                                            <strong>Client</strong>:
                                            <t t-esc="project.client" />
                                        </li>
                                        <li>
                                            <strong>Project date</strong>:
                                            <t t-esc="project.date" />
                                        </li>
                                        <li>
                                            <strong>Project URL</strong>:
                                            <a t-attf-href="{{project.url}}">
                                                <t t-esc="project.url" />
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="portfolio-description">
                                    <t t-raw="project.description" />
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <div class="oe_structure"></div>
            </div>
        </t>
